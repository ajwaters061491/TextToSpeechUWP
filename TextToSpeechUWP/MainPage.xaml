<Page
    x:Class="TextToSpeechUWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TextToSpeechUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock x:Name="lblTextToSpeech" HorizontalAlignment="Center" Margin="0,46,0,0" Text="Text to Speech" TextWrapping="Wrap" VerticalAlignment="Top" Height="117" Width="324" FontSize="48" TextAlignment="Center"/>
        <TextBox x:Name="txtTextToSpeech" HorizontalAlignment="Center" Margin="0,197,0,0" Text="TextBox" VerticalAlignment="Top" Height="539" Width="962" PlaceholderText="Enter text here" FontSize="20"/>
        <Button x:Name="btnButton" Content="Read Text" HorizontalAlignment="Center" Margin="0,769,0,0" VerticalAlignment="Top" Height="75" Width="160" RenderTransformOrigin="0.344,0.291" FontSize="22" Click="BtnButton_Click"/>
        <MediaElement Name="media"  Visibility="Collapsed"/>

    </Grid>
</Page>
